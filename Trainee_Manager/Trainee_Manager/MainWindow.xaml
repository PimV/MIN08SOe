<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:View="clr-namespace:Trainee_Manager.View" x:Class="Trainee_Manager.MainWindow"
        Title="MainWindow" Height="700" Width="1100" MinHeight="700" MinWidth="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Name="logoArea" BorderBrush="Black" BorderThickness="1" Margin="0">
            <Image Source="Images/AvansLogo.jpg" Margin="5,0" MouseUp="AvansLogo_MouseUp" Cursor="Hand"/>
        </Border>
        <Border Name="contentArea" BorderBrush="Black" BorderThickness="1" Margin="0" Grid.Column="1" Grid.Row="1">
            <!--<View:TraineeList/>-->
        </Border>
        <Border Name="sideBarArea" BorderBrush="Black" BorderThickness="1" Margin="0" Grid.Row="1">
            <!--<View:SideBar/>-->
        </Border>
        <Border Name="controlArea" BorderBrush="Black" BorderThickness="1" Margin="0" Grid.Column="1">
            <!--<View:TraineeListFilters/>-->
        </Border>
    </Grid>
</Window>
