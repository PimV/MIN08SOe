<Window x:Class="ExcelTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="677" Width="812" WindowStartupLocation="CenterScreen">
    
    <Grid>
        
        <DataGrid x:Name="data" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Height="603" Width="784"/>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click="MenuItem_Click_1"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
    </Grid>
</Window>
